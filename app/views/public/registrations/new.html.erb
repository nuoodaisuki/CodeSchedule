<div class="container mt-5" style="max-width: 400px;">
  <h2 class="text-center mb-4">新規登録画面</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="form-group mb-3">
      <%= f.label :last_name, "姓", class: "form-label" %>
      <%= f.text_field :last_name, class: "form-control" %>
    </div>

    <div class="form-group mb-3">
      <%= f.label :first_name, "名", class: "form-label" %>
      <%= f.text_field :first_name, class: "form-control" %>
    </div>

    <div class="form-group mb-3">
      <%= f.label :kana_last_name, "セイ", class: "form-label" %>
      <%= f.text_field :kana_last_name, class: "form-control" %>
    </div>

    <div class="form-group mb-3">
      <%= f.label :kana_first_name, "メイ", class: "form-label" %>
      <%= f.text_field :kana_first_name, class: "form-control" %>
    </div>

    <div class="form-group mb-3">
      <%= f.label :email, "メールアドレス", class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="form-group mb-3">
      <%= f.label :password, "パスワード", class: "form-label" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="form-group mb-3">
      <%= f.label :password_confirmation, "パスワード確認", class: "form-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="text-center">
      <%= f.submit "Sign up", class: "btn btn-success btn-lg" %>
    </div>
  <% end %>

  <div class="text-center mt-3">
    <p>
      すでに登録済みの方は 
      <%= link_to "こちら", new_user_session_path, class: "text-primary" %> 
      からログイン<br>してください。
    </p>
  </div>
</div>
