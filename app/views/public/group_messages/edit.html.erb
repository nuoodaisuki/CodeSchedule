<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <h2 class="mt-3">メッセージ編集</h2>

      <%= form_with model: [@group, @group_message], local: true do |f| %>

        <div>
          <%= f.label :content, "メッセージ", class: "form-label d-block" %>
          <%= f.text_area :content, rows: 3, class: "form-control", style: "width: 50%;" %>
        </div>

        <div class="mt-3">
          <%= f.submit "更新", class: "btn btn-primary", style: "padding: 10px 40px;" %>
        </div>

      <% end %>

    </div>
  </div>
</div>