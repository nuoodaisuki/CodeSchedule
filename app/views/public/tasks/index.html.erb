<h1 class="mt-3 text-center">機能一覧</h1>
<table class="table table-bordered table-hover mx-auto" style="max-width: 80%;">
  <thead>
    <tr>
      <th>機能名</th>
      <th>平均所要時間</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.calculate_average_time.present? ? "#{task.calculate_average_time}分" : "データなし" %></td>
        <td><%= link_to 'この機能を実装する', new_post_path(task_id: task.id), class: 'btn btn-primary' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
