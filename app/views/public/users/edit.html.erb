<div class="container mt-5" style="max-width: 60%; margin: 0 auto;">
  <!-- タイトル中央寄せ -->
  <h2 class="text-center mb-4">アカウント編集</h2>

  <!-- フォーム -->
  <%= form_with model: @user, url: user_path(@user), method: :patch, local: true do |f| %>
    <div class="form-group">
      <%= f.label :image, "プロフィール写真" %>
      <%= f.file_field :image, accept: "image/*", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :last_name, "苗字" %>
      <%= f.text_field :last_name, class: "form-control", value: @user.last_name %>
    </div>

    <div class="form-group">
      <%= f.label :first_name, "名前" %>
      <%= f.text_field :first_name, class: "form-control", value: @user.first_name %>
    </div>

    <div class="form-group">
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, class: "form-control", value: @user.email %>
    </div>

    <div class="form-group">
      <%= f.label :encrypted_password, "パスワード" %>
      <%= f.password_field :encrypted_password, class: "form-control" %>
      <p class="text-muted">(変更しない場合は空欄のままにしてください)</p>
    </div>

    <!-- ボタン -->
    <div class="d-flex justify-content-center mt-4">
      <%= f.submit "保存", class: "btn btn-primary btn-lg", style: "width: 150px; margin-right: 20px;" %>
      <%= link_to "退会する", user_path(current_user), method: :delete,
        data: { confirm: "本当に退会しますか？" },
        class: "btn btn-danger btn-lg", style: "width: 150px; margin-left: 20px;" %>
    </div>
  <% end %>
</div>
