<div class="row">

  <%= render "public/shared/user_info", user: @user, link_to_user: false, editable: false, title: 'User info' %>

  <div class="col-md-9">
    <h3 class="mt-3">
      <% if @user == current_user %>
        自分のお気に入り記事一覧
      <% else %>
        <%= @user.name %>さんのお気に入り記事一覧
      <% end %>
    </h3>
    <%= render "public/shared/posts_index", posts: @favorite_posts, show_username: true, show_buttons: false, is_favorites_page: true %>
  </div>
</div>