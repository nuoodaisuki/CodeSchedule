<div class="row">
  <!-- 投稿者情報 -->
  <div class="col-3 text-center">
    <h3 class="mt-3">User info</h3>
    <!-- プロフィール画像 -->
    <%= link_to user_path(@post.user) do %>
      <%= image_tag(@post.user.image.attached? ? @post.user.image : "no_image.jpg", class: "img-fluid rounded-circle mb-2", size: "150x150") %>
    <% end %>
    <!-- 名前 -->
    <hr>
    <p><strong><%= link_to @post.user.name, user_path(@post.user) %></strong></p>
    <hr>
  </div>

  <!-- 投稿詳細 -->
  <div class="col-9">
  <h3 class="mt-3">実装した機能のメモ書き</h3>
    <table class="table" style="max-width: 30%;">
        <tr>
          <td>実装した機能</td>
          <td>
          <%= @post.task.name %>
          <% if @post.is_completion == false %>
            (実装中)
          <% end %>
          </td>
        </tr>
    </table>

    <!-- メモ部分 -->
    <div class="mt-4 p-3 border" style="max-width: 90%; height: 350px; border-width: 2px; border-radius: 5px;">
      <p><%= @post.note %></p>
    </div>
  </div>
</div>
