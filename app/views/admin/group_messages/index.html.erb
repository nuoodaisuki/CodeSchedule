<div style="max-width: 90%; margin: 0 auto;">
  <table class="table">
    <h3 class="mt-3 mb-3"><%= @group.name %> のメッセージ一覧</h3>
    <thead>
      <tr>
        <th>名前</th>
        <th>メッセージの内容</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @group_messages.each do |message| %>
        <tr>
          <!-- ユーザーの名前（リンク付き） -->
          <td>
            <%= link_to message.user.name, admin_user_path(message.user), class: "text-decoration-none" %>
          </td>
          <!-- メッセージの内容 -->
          <td><%= message.content %></td>
          <!-- 削除ボタン -->
          <td>
            <%= link_to "削除", admin_group_group_message_path(@group, message), method: :delete, data: { confirm: "本当にこのメッセージを削除しますか？" }, class: "btn btn-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>