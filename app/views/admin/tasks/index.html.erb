<h1 class="mt-3 text-center">タスク一覧</h1>
<table class="table table-bordered table-hover mx-auto" style="max-width: 80%;">
  <thead>
    <tr>
      <th>タスク名</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= link_to '詳細', admin_task_path(task), class: 'btn btn-info' %></td>
        <td><%= link_to '編集', edit_admin_task_path(task), class: 'btn btn-secondary' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
